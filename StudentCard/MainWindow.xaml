
    <Window x:Class="StudentCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentCard"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="800">

    <Window.Resources>
        <local:ProgressSumConverter x:Key="ProgressSumConverter" />
    </Window.Resources>

    <!--Главный контейнер-->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Заголовок-->
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" 
                   Margin="0,10,0,10"
                   Text="Профиль студента" VerticalAlignment="Top" 
                   FontSize="20" FontWeight="Bold" TextAlignment="Center"/>

        <!--Основное содержание-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--Левая колонка с формами-->
            <StackPanel Margin="0,10,0,0">
                <!--Личная информация-->
                <GroupBox Height="160
                          " 
                          Header="Личная информация"
                          Margin="5,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="49*"/>
                            <ColumnDefinition Width="180*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <Label x:Name="lbFirstName" Content="Имя: "/>
                            <Label x:Name="lbLastName" Content="Фамилия: "/>
                            <Label x:Name="lbAge" Content="Возраст: "/>
                            <Label x:Name="lbGender" Content="Пол: "/>
                            <Label x:Name="lbDateBirthday" Content="Дата рождения" FontSize="10" Margin="0,2,0,41"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBox x:Name="txtFirstName" TextWrapping="Wrap" Text="" Width="280" Height="23" Margin="0,2,0,5"/>
                            <TextBox x:Name="txtLastName" TextWrapping="Wrap" Text="" Width="280" Height="23" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtAge" TextWrapping="Wrap" Text="" Width="280" Height="23" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="rbMale" Content="Мужской" Margin="0,0,20,0"/>
                                <RadioButton x:Name="rbFemale" Content="Женский" Margin="0,0,20,0"/>
                            </StackPanel>
                            <DatePicker x:Name="dpDateBirthday" Margin="0,5,0,5" Width="280" 
                            DisplayDateStart="1900-01-01" DisplayDateEnd="{x:Static sys:DateTime.Today}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <!--Контакты-->
                <GroupBox Height="73" Header="Контакты" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="49*"/>
                            <ColumnDefinition Width="180*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <Label x:Name="lbEmail" Content="Email"/>
                            <Label x:Name="lbPhone" Content="Телефон"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBox x:Name="txtEmail" TextWrapping="Wrap" Text="" Width="280" Height="21" Margin="0,1,0,5"/>
                            <TextBox x:Name="txtPhone" TextWrapping="Wrap" Text="" Width="280" Height="21" Margin="0,1,0,5"/>
                        </StackPanel>

                    </Grid>
                </GroupBox>
                <!--Обучение-->
                <GroupBox Height="100" Header="Обучение" Margin="5,0,0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="49*"/>
                            <ColumnDefinition Width="180*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <Label x:Name="lbCourse" Content="Курс"/>
                            <Label x:Name="lbSpecialization" Content="Направление" FontSize="11"/>
                            <Label x:Name="lbGrade" Content="Успеваемость" FontSize="11"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Width="289">
                            <ComboBox x:Name="cmbCourse" Width="280" Margin="0,1,0,5" >
                                <Button Content="1"/>
                                <Button Content="2"/>
                                <Button Content="3"/>
                                <Button Content="4"/>
                            </ComboBox>
                            <ComboBox x:Name="cmbSpecialization" Width="280" Margin="0,1,0,5" >
                                <ComboBoxItem Content="Программирование"/>
                                <ComboBoxItem Content="Дизайн"/>
                                <ComboBoxItem Content="Сети"/>
                            </ComboBox>
                            <StackPanel Grid.Column="1" Width="289" Orientation="Horizontal">
                                <Slider x:Name="sliderGrade" ValueChanged="Slider_ValueChanged" HorizontalAlignment="Left"
                                        IsSnapToTickEnabled="True" TickFrequency="1" 
                                        Margin="10,0,0,0" Value="0" Width="120"/>
                                <TextBlock x:Name="txtGradeDisplay" TextWrapping="Wrap" Text="TextBlock"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
            <!--Правая колонка с фото-->

            <StackPanel Grid.Column="1">
                <GroupBox Height="274">
                    <StackPanel Grid.Column="1">
                        <Border BorderBrush="Black" BorderThickness="1" Height="198" Margin="0,19,10,12">
                            <Image Name="imgPhoto" Stretch="Uniform"/>
                        </Border>
                        
                        <Button x:Name="btnLoadPhoto" Content="Загрузить фото" Click="btnLoadPhoto_Click" Width="200"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Height="89" VerticalContentAlignment="Bottom">
                    <ProgressBar x:Name="progressBar" Minimum="0" Maximum="100" Height="15" Width="368" Margin="2,0,0,0">
                        <ProgressBar.Value>
                            <MultiBinding Converter="{StaticResource ProgressSumConverter}">
                                <Binding ElementName="txtFirstName" Path="Text" />
                                <Binding ElementName="txtLastName" Path="Text" />
                                <Binding ElementName="txtAge" Path="Text" />
                                <Binding ElementName="rbMale" Path="IsChecked" />
                                <Binding ElementName="rbFemale" Path="IsChecked" />
                                <Binding ElementName="dpDateBirthday" Path="SelectedDate" />
                                <Binding ElementName="txtEmail" Path="Text" />
                                <Binding ElementName="txtPhone" Path="Text" />
                                <Binding ElementName="cmbCourse" Path="SelectedIndex" />
                                <Binding ElementName="cmbSpecialization" Path="SelectedIndex" />
                                <Binding ElementName="sliderGrade" Path="Value" />
                                <Binding ElementName="imgPhoto" Path="Source.Length" />
                            </MultiBinding>
                        </ProgressBar.Value>
                    </ProgressBar>
                </GroupBox>
                
            </StackPanel>
        </Grid>

        

        <!--Кнопки действий-->
        <Button x:Name="btrClear" Content="Очистить" HorizontalAlignment="Left" 
                Height="30" Margin="40,20,0,0" Grid.Row="2" VerticalAlignment="Center" Width="90" Click="btrClear_click"/>
        <Button x:Name="btnSave" Content="Сохранить" 
                Height="30" Margin="0,20,40,0" Grid.Row="2" VerticalAlignment="Top" Width="90" HorizontalAlignment="Right" Click="btnSave_Click"/>

    </Grid>
</Window>

    